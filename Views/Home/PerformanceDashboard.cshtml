@model ApiPerformanceMetricsViewModel

<!-- Include Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <h2 class="mb-4">API Performance Dashboard</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center p-4">
                <h3>Total Requests</h3>
                <h4 class="text-primary">@Model.TotalRequests</h4>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center p-4">
                <h3>Successful Requests</h3>
                <h4 class="text-success">@Model.SuccessfulRequests</h4>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm text-center p-4">
                <h3>Failed Requests</h3>
                <h4 class="text-danger">@Model.FailedRequests</h4>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <canvas id="requestChart" width="400" height="200"></canvas>
        </div>
    </div>
</div>

<!-- Include Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('requestChart').getContext('2d');
    var requestChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Total Requests', 'Successful Requests', 'Failed Requests'],
            datasets: [{
                label: 'API Requests',
                data: [@Model.TotalRequests, @Model.SuccessfulRequests, @Model.FailedRequests],
                backgroundColor: [
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(54, 162, 235, 1)'
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>